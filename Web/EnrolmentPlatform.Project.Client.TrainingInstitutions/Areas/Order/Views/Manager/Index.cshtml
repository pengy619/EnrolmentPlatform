@{
    ViewBag.Title = "报名单列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .searchMore {
        display: none;
    }
    .layui-table-body {
        overflow-x: auto;
    }
    .layui-table-cell{
        height: auto;
    }
