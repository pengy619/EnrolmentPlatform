                    <div class="layui-input-inline">
                        <input type="text" id="txtUserAccount" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item flex">
                    <label class="layui-form-label" style="width:auto">姓名</label>
                    <div class="layui-input-inline">
                        <input type="text" id="txtUserName" class="layui-input">
                    </div>
                    <label class="layui-form-label" style="width:auto">登陆账号</label>
                    <div class="layui-input-inline">
                        <input type="text" id="txtUserAccount" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item flex">
                    <label class="layui-form-label" style="width:auto">姓名</label>
                    <div class="layui-input-inline">
                        <input type="text" id="txtUserName" class="layui-input">
                    </div>
                    <label class="layui-form-label" style="width:auto">登陆账号</label>
                    <div class="layui-input-inline">
                        <input type="text" id="txtUserAccount" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item flex">
                    <button class="layui-btn layui-btn-warm" type="button" lay-submit="" lay-filter="s">查询</button>
                    <button class="layui-btn layui-btn-warm" type="button" lay-submit="" lay-filter="gs">高级查询</button>
                </div>
                <a href="@Url.Action("Option","Manager",new { area="Order"})" class="layui-btn ">新建</a>
                <button class="layui-btn layui-btn-primary" lay-submit="" lay-filter="d">删除</button>
                <button class="layui-btn layui-btn-primary" lay-submit="" lay-filter="export">导出</button>
            </div>
        </div>
        <div class="panel-body">
            <table id="table" lay-filter="table"></table>
        </div>
    </div>
</div>

<script type="text/html" id="tableTool">
    <a class="layui-btn layui-btn-primary layui-btn-xs" href='@(Url.Action("Option","Manager",new {Area="Order"}))?orderId={{d.OrderId}}' lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-primary layui-btn-xs" href="javascript:alert('日志');" lay-event="log">日志</a>
</script>
<script>
    layui.use(['jquery', 'table', 'layer'], function () {
        var table = layui.table, layer = layui.layer, form = layui.form;
        //实例表格
        var tableOptions = {
            elem: '#table'
            , skin: 'line'
            , limit: 20
            , url: '@Url.Action("Search", "Manager")'
            , page: true //开启分页
            , cols: [[ //表头
                { type: 'checkbox', field: 'RoleId' }
                , { field: 'StudentName', title: '学生姓名' }
                , { field: 'BatchName', title: '批次' }
                , { field: 'SchoolName', title: '院校' }
                , { field: 'LevelName', title: '层次' }
                , { field: 'MajorName', title: '专业' }
                , { field: 'AllOrderImageUpload', title: '电子照' }
                , { field: 'StatusName', title: '状态' }
                , { field: 'CreateTimeStr', title: '报名时间' }
                , { field: 'CreateUserName', title: '招生老师' }
                , { title: '操作', toolbar: '#tableTool', width: "10%" }
            ]]
        }
        table.render(tableOptions);

        //删除
        form.on('submit(d)', function (data) {
            //选中行
            var checkdata = table.checkStatus('table').data;
            if (checkdata.length == 0) {
                layer.msg('请选择需要删除的报名单。', {
                    icon: 2,
                    time: 2000
                });
                return false;
            }

            //删除确认
            layer.confirm('确认删除？', {
                btn: ['确认', '取消']
            }, function (index, layero) {
                //删除处理
                var arr = new Array(checkdata.length);
                for (var i = 0; i < checkdata.length; i++) {
                    arr[i] = checkdata[i].RoleId;
                }

                $.ajax({
                    type: "POST",
                    contentType: "application/json;utf-8",
                    dataType: "json",
                    async: false,
                    data: JSON.stringify(arr),
                    url: '@Url.Action("Delete", "Manager")',
                    success: function (result) {
                        if (result.ret == 1) {
                            layer.msg('删除成功。', {
                                icon: 1,
                                time: 2000
                            }, function () {
                                table.reload("table");
                            });
                        }
                        else {
                            layer.msg(result.msg, {
                                icon: 2,
                                time: 2000
                            });
                        }
                    }
                });

                layer.close(index);
            });
        });

        //查询
        form.on('submit(s)', function (data) {
            //执行重载
            table.reload('table', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    //RoleName: $("#txtRoleName").val(),
                    //Status: $("input[name='RoleStatus']:checked").val()
                }
            });
        });
    })
</script> 