
@{
    ViewBag.Title = "景区后台登录";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="~/Content/website/framework/layui/css/layui.css?v=@(DllVersion.Version)" rel="stylesheet" />
    <link rel="stylesheet" href="https://at.alicdn.com/t/font_580083_13mahpe6ea27f1or.css">
    <link href="~/Content/website/css/main.css?v=@(DllVersion.Version)" rel="stylesheet" />
    <link href="~/Content/website/css/replace.css?v=@(DllVersion.Version)" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <!--引入js-->
    <script src="~/Content/website/framework/layui/layui.js?v=@(DllVersion.Version)"></script>
    <script src="~/Content/website/js/common.js?v=@(DllVersion.Version)"></script>
    <script src="~/Content/website/js/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="login-wrap">
        <div class="login-form">
            <div class="login-logo">
                <img src="~/Content/website/images/login_logo.png" alt="">
            </div>
            <form action="" class="layui-form">
                <div class="layui-form-item">
                    <input type="text" class="layui-input" id="txtAccount" value="admin" lay-verify="required" placeholder="用户名">
                </div>
                <div class="layui-form-item">
                    <input type="password" class="layui-input" id="txtPwd" value="a123456" lay-verify="password" placeholder="密码">
                </div>
                <div class="layui-form-item">
                    <button class="layui-btn layui-btn-fluid" lay-filter="login" lay-submit="">登录</button>
                </div>
            </form>
        </div>
    </div>
    <script>
        layui.use(['form', 'jquery'], function () {
            var form = layui.form;
            form.verify({
                password: [
                    /^[\S]{6,12}$/
                    , '密码错误。'
                ]
            });

            form.on('submit(login)', function (data) {
                //提交
                var dto = {};
                dto.account = $("#txtAccount").val();
                dto.pwd = $("#txtPwd").val();
                $.ajax({
                    type: "POST",
                    contentType: "application/json;utf-8",
                    dataType: "json",
                    async: false,
                    data: JSON.stringify(dto),
                    url: '@Url.Action("LoginOp", "Login")',
                    success: function (result) {
                        if (result.ret == true) {
                            layer.msg('登录成功。', {
                                icon: 1,
                                time: 1000
                            }, function () {
                                window.location.href = '@Url.Action("index", "home")';
                            });
                        }
                        else {
                            layer.msg(result.msg, {
                                icon: 2,
                                time: 2000
                            });
                        }
                    }
                });
                return false;
            });
        });
    </script>
</body>
</html>
