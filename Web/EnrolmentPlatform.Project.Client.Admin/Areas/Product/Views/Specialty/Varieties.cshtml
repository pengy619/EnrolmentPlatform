@{
    ViewBag.Title = "品种管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var statusBase = ViewBag.StatusBase as List<KeyValuePair<int, string>>;
    var categories = ViewBag.Categories as List<ProductCategoriesDto>;
}
<div class="main-wrap">
    <div class="panel">
        <div class="panel-title">
            <div class="layui-form">
                <div class="layui-form-item ">
                    <label class="layui-form-label">启用状态</label>
                    <div class="layui-input-block">
                        <input type="radio" name="status" value="0" title="全部" lay-filter="status_search" checked>
                        @foreach (var item in statusBase)
                        {
                            <input type="radio" name="status" lay-filter="status_search" value="@(item.Key)" title="@(item.Value)">
                        }
                    </div>
                </div>
                <div class="layui-form-item ">
                    <label class="layui-form-label">农产品分类</label>
                    <div class="layui-input-inline">
                        <select name="producttype" lay-filter="sel_search">
                            <option value="@(Guid.Empty)">请选择</option>
                            @foreach (var item in categories)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <label class="layui-form-label">农产品名称</label>
                    <div class="layui-input-inline">
                        <input type="text" id="specialtyName" placeholder="农产品名称" autocomplete="off" class="layui-input">
                    </div>
                    <label class="layui-form-label">品种</label>
                    <div class="layui-input-inline">
                        <input type="text" id="varietiesName" placeholder="品种" autocomplete="off" class="layui-input">
                    </div>
                    <button class="layui-btn layui-btn-warm" data-type="reload">查询</button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <a href="@Url.Action("VarietiesOpt","Specialty",new { parentId =2})" class="layui-btn layui-btn-warm layui-btn-sm">添加品种</a>
            <button class="layui-btn layui-btn-default layui-btn-sm" data-type="onSale">启用</button>
            <button class="layui-btn layui-btn-default layui-btn-sm" data-type="offSale">禁用</button>
            <table id="product-table" lay-filter="table"></table>
        </div>
    </div>
</div>
<script type="text/html" id="tableTool">
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="del">删除</a>
</script>
<script>
    var isSubmit = true;

    layui.use(['jquery', 'table', 'layer', 'form'], function () {
        var table = layui.table;
        var form = layui.form;
        //实例表格
        var tableOptions = {
            elem: '#product-table'
            , skin: 'line'
            , limit: 20
            , url: '@Url.Action("VarietiesList", "Specialty")'//数据
            , page: true //开启分页
            , cols: [[ //表头
                { type: 'checkbox', fixed: 'left' }
                , { field: 'ProductCategory', title: '农产品分类', sort: true }
                , { field: 'SpecialtyName', title: '农产品名称', sort: true }
                , { field: 'VarietiesName', title: '品种', sort: true }
                , { field: 'StatusStr', title: '状态' }
                , { title: '操作', toolbar: '#tableTool', width: 150 }
            ]]
        }
        table.render(tableOptions)

        var $ = layui.$, active = {
            reload: function () {
                //执行重载
                table.reload('product-table', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    }
                    , where: {
                        Status: $("input[name=status]:checked").val(),
                        ProductCategoryId: $("select[name=producttype]").val(),
                        SpecialtyName: $('#specialtyName').val(),
                        VarietiesName: $('#varietiesName').val()
                    }
                });
            },
            onSale: function () {
                var checkStatus = table.checkStatus('product-table')
                    , data = checkStatus.data;
                if (data.length == 0) return false;  
                var Ids = [];
                var isOption = true;
                for (var i = 0; i < data.length; i++) {
                    if (data[i].Status == "@((int)StatusBaseEnum.Enabled)") {
                        isOption = false;
                        layer.msg("请勾选已禁用的品种进行启用！");
                        break;
                    } else {
                        Ids.push(data[i].VarietiesId);
                    }
                }           
                if (isOption) {
                    layer.confirm('您确定要启用选中的品种吗？', function (index) {
                        if (isSubmit) {
                            isSubmit = false;
                            $.ajax({
                                url: "@Url.Action("VarietiesOnEnabled", "Specialty")",
                                type: 'Post',
                                async: false,
                                dataType: 'json',
                                data: { varietiesIds: Ids },
                                success: function (result) {
                                    isSubmit = true;
                                    if (result.IsSuccess) {
                                        table.reload('product-table');
                                    }
                                    else {
                                        layer.msg(result.Info);
                                    }
                                },
                                error: function (XMLHttpRequest, textStatus, errorThrown) {
                                    isSubmit = true;
                                    layer.msg("系统出现异常，请联系管理员！");
                                }
                            });
                            layer.close(index);
                        }
                    });
                }
            },
            offSale: function () {
                var checkStatus = table.checkStatus('product-table')
                    , data = checkStatus.data;
                if (data.length == 0)
                    return false;
                var Ids = [];
                var isOption = true;
                for (var i = 0; i < data.length; i++) {
                    if (data[i].Status == "@((int)StatusBaseEnum.Disabled)") {
                        isOption = false;
                        layer.msg("请勾选已启用的品种进行禁用！");
                        break;
                    } else {
                        Ids.push(data[i].VarietiesId);
                    }
                }           
                if (isOption) {
                    layer.confirm('您确定要禁用选中的品种吗？', function (index) {
                        if (isSubmit) {
                            isSubmit = false;
                            $.ajax({
                                url: "@Url.Action("VarietiesOnDisabled", "Specialty")",
                                type: 'Post',
                                async: false,
                                dataType: 'json',
                                data: { varietiesIds: Ids },
                                success: function (result) {
                                    isSubmit = true;
                                    if (result.IsSuccess) {
                                        table.reload('product-table');
                                    }
                                    else {
                                        layer.msg(result.Info);
                                    }
                                },
                                error: function (XMLHttpRequest, textStatus, errorThrown) {
                                    isSubmit = true;
                                    layer.msg("系统出现异常，请联系管理员！");
                                }
                            });
                            layer.close(index);
                        }
                    });
                }
            }
        };

        $('.panel .layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });

        form.on('radio(status_search)', function (data) {
            //执行重载 
            table.reload('product-table', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    Status: $("input[name=status]:checked").val(),
                    ProductCategoryId: $("select[name=producttype]").val(),
                    SpecialtyName: $('#specialtyName').val(),
                    VarietiesName: $('#varietiesName').val()
                }
            });
        });
        form.on('select(sel_search)', function (data) {
            //执行重载
            table.reload('product-table', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    Status: $("input[name=status]:checked").val(),
                    ProductCategoryId: $("select[name=producttype]").val(),
                    SpecialtyName: $('#specialtyName').val(),
                    VarietiesName: $('#varietiesName').val()
                }
            });
        });

        table.on('tool(table)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            var tr = obj.tr; //获得当前行 tr 的DOM对象
            if (layEvent == 'del') {
                layer.confirm('删除品种', {
                    title: '确定删除该品种？',
                    btn: ['确定', '取消'] //按钮
                }, function (index) {

                    if (isSubmit) {
                        isSubmit = false;
                        //上市
                        $.ajax({
                            url: "@Url.Action("DelSpecialtyVarieties", "Specialty")",
                            type: 'Post',
                            async: false,
                            dataType: 'json',
                            data: { varietiesId: data.VarietiesId },
                            success: function (result) {
                                isSubmit = true;
                                if (result.IsSuccess) {
                                    table.reload('product-table');
                                }
                                else {
                                    layer.msg(result.Info);
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                isSubmit = true;
                                layer.msg("系统出现异常，请联系管理员！");
                            }
                        });
                        layer.close(index);
                    }
                }, function () {
                    //取消
                });
            } else if (layEvent === 'edit') {
                location.href = "@Url.Action("VarietiesOpt", "Specialty")?Id=" + data.VarietiesId;
            }
        })

    })
</script>