    </div>
</div>
<input type="hidden" id="hidOrderId" value='@((dto != null) ? dto.OrderId.Value.ToString() :"")' />
<script type="text/javascript">
    var form, layer;
    layui.use(['jquery', 'form', 'layer'], function () {
        form = layui.form;
        layer = layui.layer;

        $(".orderImg").click(function () {
            window.open($(this).attr("src"));
        });
    });

    var canUpload = "@(dto.FromChannelId.HasValue==false?"true":"")";
    if (canUpload == "") {
        $(".uploadDiv").hide();
    }

    //上传文件
    function postFile(type) {
        if ($("#File" + type).val() == "") {
            layer.msg("请选择上传文件！", {
                icon: 2,
                time: 2000
            });
            return false;
        }
        var file = document.getElementById("File" + type).files[0];
        var fdata = new FormData();
        fdata.append("file", file);
        fdata.append("type", type);
        fdata.append("orderId", $("#hidOrderId").val());
        $.ajax({
            url: "@Url.Action("SaveImage", "Image")",
            data: fdata,
            type: "POST",
            async: false,
            processData: false,//用于对data参数进行序列化处理 这里必须false
            contentType: false, //必须
            success: function (data) {
                if (data.ret == false) {
                    layer.msg("上传失败！", {
                        icon: 2,
                        time: 2000
                    });
                }
                else {
                    layer.msg("上传成功！", {
                        icon: 1,
                        time: 2000
                    });
                    $("#image" + type).attr("src", data.url);
                    $("#File" + type).val("");
                }
            },
            error: function (e) {
                layer.msg("上传失败！", {
                    icon: 2,
                    time: 2000
                });
            }
        });
    }
</script>

