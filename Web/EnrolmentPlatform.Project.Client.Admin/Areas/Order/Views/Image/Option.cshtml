                    <div class="item">
                        <span class="label">头像：</span>
                        <span class="text">
                            <div class="imgDiv">
                                <img id="image8" class="orderImg" src="@(!string.IsNullOrWhiteSpace(imageDto.TouXiang)?imageDto.TouXiang:"/Content/Website/images/nopic.png")" />
                            </div>
                            <div class="uploadDiv">
                                <input id="File8" class="orderFile" type="file" />
