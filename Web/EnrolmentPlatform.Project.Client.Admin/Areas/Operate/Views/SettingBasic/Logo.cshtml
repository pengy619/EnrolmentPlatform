
@{
    ViewBag.Title = "LOGO配置";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TotalStationSetDTO
<div class="main-wrap">
    <div class="panel">
        <div class="panel-title">
            LOGO配置
        </div>
        <div class="panel-body">
            <form class="layui-form">
                <div class="layui-form-item">
                    <label class="layui-form-label">网站LOGO</label>
                    <div class="layui-input-block">
                        <button class="layui-btn layui-btn-primary" type="button" id="upload">上传图片</button>
                        <span>（图片格式为jpg/png/bmp，最大为2M）</span>
                        <div class="upload-img-box">
                            <div class="img-item">
                                <div class="cover">
                                    <span class="layui-icon" onclick="RemovePic()">ဇ</span>
                                </div>
                                <img src="@(Model.WebsiteLogo)" id="img_WebsiteLogo" alt="">
                                <input type="hidden" id="hid_WebsiteLogo" value="@(Model.WebsiteLogo)" name="WebsiteLogo" lay-verify="WebsiteLogo" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="layui-form-item" style="display:none">
                    <label class="layui-form-label">网站标题</label>
                    <div class="layui-input-inline">
                        <input type="text" value="@Model.WebsiteTitle" name="WebsiteTitle" lay-verify="WebsiteTitle" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item" style="display:none">
                    <label class="layui-form-label">网站关键词</label>
                    <div class="layui-input-inline">
                        <input type="text" value="@Model.WebsiteKW" name="WebsiteKW" lay-verify="WebsiteKW" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label"></label>
                    <div class="layui-input-inline">
                        <button class="layui-btn" lay-submit="" lay-filter="submit">保存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div style="display:none">
    <textarea id="text_editor"></textarea>
</div>

@Html.RenderTextAreaEditorScripts()
<script type="text/javascript">
    var editor;
    $("#text_editor").createEditor({ width: "100%", height: 300 }, function (e) {
        editor = e;
    });
    $("#upload").click(function () {
        editor.loadPlugin('image', function () {
            editor.plugin.imageDialog({
                showRemote: false,
                clickFn: function (url, title, width, height, border, align) {
                    $("#hid_WebsiteLogo").val(url);
                    $("#img_WebsiteLogo").attr("src",url);
                    editor.hideDialog();
                }
            });
        });
    });
    function RemovePic()
    {
        $("#hid_WebsiteLogo").val("");
        $("#img_WebsiteLogo").attr("src", "");
    }
    layui.use(['form', 'layedit'], function () {
        var form = layui.form
            , layer = layui.layer
            , layedit = layui.layedit
        //自定义验证规则
        form.verify({
            //WebsiteTitle: function (value) {
            //    if (value.length < 1) {
            //        return '必填项不能为空';
            //    }
            //},
            //WebsiteKW: function (value) {
            //    if (value.length < 1) {
            //        return '必填项不能为空';
            //    }
            //},
            WebsiteLogo: function (value) {
                if (value.length < 1) {
                    return '请选择图片';
                }
            }
        });

        //监听提交
        form.on('submit(submit)', function (data) {
            $.ajax({
                    url: "@Url.Action("WebsiteSet", "SettingB2C")",
                    type: "post",
                    data: JSON.stringify(data.field),
                    contentType: "application/json",
                    success: function (res) {
                        bool = res.IsSuccess;
                        if (res.IsSuccess) {
                            layer.msg("设置成功", {
                                icon: 1
                                , time: 2000
                            });
                         }
                        else {
                            layer.msg(res.Info, {
                                icon: 2
                                , time: 2000
                            });
                        }
                        _IsSubmit = false;
                    }
            });
            return false;
        });
    });
</script> 
