@using EnrolmentPlatform.Project.DTO.Enums.Systems;
@{
    ViewBag.Title = "广告配置";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int position = (int)BannerPositionEnum.SoldNow;
    if (ViewBag.Classify == (int)BannerClassifyEnum.SpecialtyList)
    {
        position = ViewBag.Position;
    }
}

<div class="main-wrap">
    <div class="panel">
        <div class="layui-tab layui-tab-brief" lay-filter="docDemoTabBrief">
            <ul class="layui-tab-title">
                <li class="layui-this" lay-id="@((int)BannerClassifyEnum.SpecialtyList)">农产品列表</li>
                <li lay-id="@((int)BannerClassifyEnum.SpecialtyDetail)">农产品详情</li>
            </ul>
            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                    <div class="panel-title">
                        <div class="layui-form">
                            <div class="layui-form-item ">
                                <label class="layui-form-label">类型</label>
                                <div class="layui-input-inline">
                                    <input type="radio" name="position" value="@((int)BannerPositionEnum.SoldNow)" title="现货" lay-filter="position" @(position == (int)BannerPositionEnum.SoldNow ? "checked" : "")>
                                    <input type="radio" name="position" value="@((int)BannerPositionEnum.PreSale)" title="预售" lay-filter="position" @(position == (int)BannerPositionEnum.PreSale ? "checked" : "")>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <button class="layui-btn layui-btn-warm layui-btn-sm" data-type="add">添加</button>
                        <button class="layui-btn layui-btn-primary layui-btn-sm" data-type="del">删除</button>
                        <table id="table1" lay-filter="table"></table>
                    </div>
                </div>
                <div class="layui-tab-item">
                    <div class="panel-body">
                        @*<button class="layui-btn layui-btn-warm layui-btn-sm" id="table2-add">添加</button>
                            <button class="layui-btn layui-btn-primary layui-btn-sm">删除</button>*@
                        <table id="table2" lay-filter="table"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/html" id="tablePic">
    <div>
        <img src="{{d.ImgPath}}" alt="">
    </div>
</script>
<script type="text/html" id="tableTool1">
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="edit">编辑</a>
</script>
<script type="text/html" id="tableTool2">
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="clear">清除</a>
</script>
<script>
    layui.use(['jquery', 'table', 'form', 'element'], function () {
        var table = layui.table
            , form = layui.form
            , element = layui.element;
        element.tabChange('docDemoTabBrief', '@ViewBag.Classify');
        //农产品列表广告
        LoadBannerList(@position)
        function LoadBannerList(position) {
            var tableOptions = {
                elem: '#table1'
                , skin: 'line'
                , limit: 20
                , url: '@Url.Action("BannerList", "SettingB2C", new { Classify = (int)BannerClassifyEnum.SpecialtyList })&Position=' + position //数据
                , page: true //开启分页
                , cols: [[ //表头
                    { type: 'checkbox', fixed: 'left' }
                    , { field: 'PositionStr', title: '位置' }
                    , { field: 'ImgPath', title: '图片', templet: '#tablePic' }
                    , { field: 'Url', title: '链接', }
                    , { field: 'Sort', title: '排序', edit: true }
                    , { title: '操作', toolbar: '#tableTool1', width: 150 }
                ]]
            }
            table.render(tableOptions)
        }

        form.on('radio(position)', function (data) {
            LoadBannerList(data.value);
        });

        //农产品详情广告
        var tableOptions = {
            elem: '#table2'
            , skin: 'line'
            , limit: 20
            , url: '@Url.Action("BannerList", "SettingB2C", new { Classify = (int)BannerClassifyEnum.SpecialtyDetail })'//数据
            , page: true //开启分页
            , cols: [[ //表头
                { field: 'PositionStr', title: '位置' }
                , { field: 'ImgPath', title: '图片', templet: '#tablePic' }
                , { field: 'Url', title: '链接', }
                , { title: '操作', toolbar: '#tableTool2', width: 150 }
            ]]
        }
        table.render(tableOptions)

        var $ = layui.$, active = {
            add: function () { //获取选中数据
                location.href = '@Url.Action("FarmMallOption","SettingB2C",new { area="Operate", Classify = (int)BannerClassifyEnum.SpecialtyList })&Position=' + $("input[name=position]:checked").val();
            },
            del: function () {
                var checkStatus = table.checkStatus('table1')
                    , data = checkStatus.data;
                if (data.length == 0) return false;
                layer.confirm('您确定要删除选中的项吗？', function (index) {
                    var ckb_value = [];
                    for (var i = 0; i < data.length; i++) {
                        ckb_value.push(data[i].BannerId);
                    }
                    var ajaxOption = {
                        url: "@Url.Action("DeleteBanners", "SettingB2C")",
                        type: 'Post',
                        async: false,
                        dataType: 'json',
                        data: { idList: ckb_value },
				        success: function (result) {
                            if (result.IsSuccess) {
                                table.reload('table1');
                            }
                            else {
                                layer.msg(result.Info);
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            layer.msg("系统出现异常，请联系管理员！");
                        }
                    }
                    $.ajax(ajaxOption);
                    layer.close(index);
                });
            }
        };

        $('.layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });

        table.on('tool(table)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            if (layEvent === 'edit') {
                location.href = "@Url.Action("FarmMallOption", "SettingB2C")?BannerId=" + data.BannerId;
            } else if (layEvent === 'clear') {
                layer.confirm('您确定要清除吗？', function (index) {
                    var ajaxOption = {
                        url: "@Url.Action("ClearBannerSettings", "SettingB2C")",
                        type: 'Post',
                        async: false,
                        dataType: 'json',
                        data: { bannerId: data.BannerId },
                        success: function (result) {
                            if (result.IsSuccess) {
                                table.reload('table2');
                            }
                            else {
                                layer.msg(result.Info);
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            layer.msg("系统出现异常，请联系管理员！");
                        }
                    }
                    $.ajax(ajaxOption);
                    layer.close(index);
                });
            }
        })

        //更新排序
        table.on('edit(table)', function (obj) {
            var value = obj.value //得到修改后的值
                , data = obj.data //得到所在行所有键值
                , field = obj.field; //得到字段
            var ajaxOption = {
                url: "@Url.Action("UpdateBannerSort", "SettingB2C")",
                type: 'Post',
                async: false,
                dataType: 'json',
                data: { BannerId: data.BannerId, Sort: value },
				success: function (result) {
                    if (result.IsSuccess) {
                        if (data.Classify == "@((int)BannerClassifyEnum.SpecialtyList)")
                            table.reload('table1');
                        else
                            table.reload('table2');
                    }
                    else {
                        layer.msg(result.Info);
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    layer.msg("系统出现异常，请联系管理员！");
                }
            }
            $.ajax(ajaxOption);
        });
    })
</script>