
@{
    ViewBag.Title = "农产品商城配置";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-wrap">
    <div class="panel">
        <div class="panel-title">
            农产品商城配置
        </div>
        <div class="panel-body">
            <div class="layui-tab layui-tab-brief" lay-filter="docDemoTabBrief">
                <ul class="layui-tab-title">
                    <li class="layui-this">推荐分类设置</li>
                    <li><a href="@Url.Action("RecommendAmusementProduct","SettingH5",new { area="Operate"})">推荐农产品设置</a></li>
                </ul>
                <div class="layui-tab-content">
                    <div class="layui-tab-item layui-show">
                        <a href="@Url.Action("CategoryOpt","SettingH5",new { area="Operate"})" class="layui-btn layui-btn-warm layui-btn-sm">添加</a>
                        <button class="layui-btn layui-btn-primary layui-btn-sm" lay-submit="" lay-filter="d">删除</button>
                        <table id="banner-table" lay-filter="table"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/html" id="tableTool">
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="edit">编辑</a>
</script>
<script type="text/html" id="tablePic">
    <div>
        <img src="{{d.FilePath}}" alt="">
    </div>
</script>
<script>
    layui.use(['jquery', 'table'], function () {
        var table = layui.table, layer = layui.layer, form = layui.form;

        //实例表格
        var tableOptions = {
            elem: '#banner-table'
            , skin: 'line'
            , limit: 20
            , url: '@Url.Action("Search", "SettingH5")'//数据
            , page: true //开启分页
            , cols: [[ //表头
                { field: 'Id', type: 'checkbox', fixed: 'left' }
                , { field: 'FilePath', title: '图片', templet: '#tablePic' }
                , { field: 'CateName', title: '分类', }
                , { field: 'Sort', title: '排序', edit: true }
                , { title: '操作', toolbar: '#tableTool', width: 150 }
            ]]
        }
        table.render(tableOptions);

         //删除
        form.on('submit(d)', function (data) {
            //选中行
            var checkdata = table.checkStatus('banner-table').data;
            if (checkdata.length == 0) {
                layer.msg('请选择需要删除的游乐项目设置。', {
                    icon: 2,
                    time: 2000
                });
                return false;
            }

            layer.confirm('您确定要删除选中的项吗？', function (index) {
                //删除处理
                var arr = new Array(checkdata.length);
                for (var i = 0; i < checkdata.length; i++) {
                    arr[i] = checkdata[i].Id;
                }

                $.ajax({
                    type: "POST",
                    contentType: "application/json;utf-8",
                    dataType: "json",
                    async: false,
                    data: JSON.stringify(arr),
                    url: "@Url.Action("DeleteRecommendProductCategories", "SettingH5")",
                    success: function (result) {
                        if (result.ret == true) {
                            layer.msg('删除成功。', {
                                icon: 1,
                                time: 1500
                            }, function () {
                                table.reload("banner-table");
                            });
                        }
                        else {
                            layer.msg(result.msg, {
                                icon: 2,
                                time: 1500
                            });
                        }
                    }
                });
                layer.close(index);
            });
        });

        //编辑
        table.on('tool(table)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            if (layEvent === 'edit') {
                location.href = "@Url.Action("CategoryOpt", "SettingH5")?id=" + data.Id;
            }
        })

        //更新排序
        table.on('edit(table)', function (obj) {
            var value = obj.value //得到修改后的值
                , data = obj.data //得到所在行所有键值
                , field = obj.field; //得到字段

            //排序序号输入错误
            if (/^\d+$/.test(value) == false) {
                value = 0;
                //layer.msg("排序字段输入非数字，将会变成为0", {
                //    icon: 2,
                //    time: 1500
                //});
            }

            var ajaxOption = {
                url: "@Url.Action("SortRecommendProductCategories", "SettingH5")",
                type: 'Post',
                async: false,
                dataType: 'json',
                data: { id: data.Id, sortId: value },
                success: function (result) {
                    if (result.ret) {
                        layer.msg('更新成功。', {
                            icon: 1,
                            time: 1500
                        }, function () {
                            table.reload('banner-table');
                        });
                    }
                    else {
                        layer.msg(result.Info);
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    layer.msg("系统出现异常，请联系管理员！");
                }
            }
            $.ajax(ajaxOption);
        });
    });
</script>