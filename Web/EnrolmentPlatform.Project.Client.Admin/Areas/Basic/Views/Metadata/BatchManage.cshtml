
@{
    ViewBag.Title = "批次管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-wrap white-bg">
    <div id="btnBar">
        <button data-type="add" id="add" class="layui-btn layui-btn-normal layui-btn-small add">+添加</button>
        <button data-type="delete" id="delete" class="layui-btn layui-btn-danger layui-btn-small a4">删除</button>
    </div>
    <div>
        <table id="batchtable" lay-filter="batch"></table>
    </div>
</div>
<script type="text/html" id="operat">
    <i class="layui-icon" lay-event="update" style="font-size: 20px;color: #009688;">&#xe642;</i>
</script>

<script>
    var isSubmit = true;
    layui.use(['table', 'form'], function () {
        var table = layui.table, form = layui.form;
        //第一个实例
        table.render({
            id: 'sid'
            , elem: '#batchtable'
            , url: '@Url.Action("MetadataList", "Metadata", new { Type= MetadataTypeEnum.Batch })'
            , page: true //开启分页
            , cols: [[ //标题栏
                { title: '批次信息', colspan: 4 } //rowspan即纵向跨越的单元格数
            ], [ //标题栏
                { type: 'checkbox' }
                , { type: 'numbers', title: '序号' }
                , { field: 'Name', title: '批次名称' }
                , { title: '操作', width: 80, templet: '#operat' }
            ]]
        });
        //监听工具条
        table.on('tool(batch)', function (obj) {
            var data = obj.data;
            if (obj.event === 'update') {
                layer.prompt({
                    value: data.Name,
                    title: '修改批次',
                }, function (value, index, elem) {
                    if (isSubmit) {
                        isSubmit = false;
                        $.ajax({
                            url: "@Url.Action("UpdateMetadata", "Metadata")",
                            type: "post",
                            data: { Id: data.Id, Name: value },
                            dataType: "json",
                            success: function (res) {
                                if (res.IsSuccess) {
                                    layer.msg("保存成功", {
                                        icon: 1
                                        , time: 1000
                                    }, function () {
                                        table.reload('sid');
                                        layer.close(index);
                                    });
                                } else {
                                    layer.msg(res.Info, {
                                        icon: 2
                                        , time: 2000
                                    });
                                }
                            },
                            complete: function () {
                                isSubmit = true;
                            }
                        });
                    }
                });
            }
        });

        var active = {
            delete: function () { //获取选中数据
                var checkStatus = table.checkStatus('sid')
                    , data = checkStatus.data;
                if (data.length == 0) {
                    layer.msg("请选择要删除的数据");
                } else {
                    var idArr = new Array();
                    $.each(data, function (k, v) {
                        idArr.push(v.Id);
                    })
                    layer.open({
                        title: "删除操作"
                        , content: '您确认要删除吗？'
                        , btn: ['确认', '取消']
                        , yes: function (index, layero) {
                            $.ajax({
                                url: '@Url.Action("DeleteMetadata", "Metadata")',
                                data: { idList: idArr },
                                dataType: 'json',
                                type: 'post',
                                success: function (data) {
                                    layer.msg(data.Info);
                                    if (data.IsSuccess) {
                                        setTimeout(function () {
                                            document.location.reload();
                                        }, 800);
                                    }
                                }
                            })
                        }
                        , btn2: function (index, layero) {
                            layer.closeAll();
                        }
                    });
                }
            },
            add: function () {
                layer.prompt({ title: '添加批次' }, function (value, index, elem) {
                    if (isSubmit) {
                        isSubmit = false;
                        $.ajax({
                            url: "@Url.Action("AddMetadata", "Metadata")",
                            type: "post",
                            data: { Name: value, Type: "@MetadataTypeEnum.Batch" },
                            dataType: "json",
                            success: function (res) {
                                if (res.IsSuccess) {
                                    layer.msg("保存成功", {
                                        icon: 1
                                        , time: 1000
                                    }, function () {
                                        table.reload('sid');
                                        layer.close(index);
                                    });
                                } else {
                                    layer.msg(res.Info, {
                                        icon: 2
                                        , time: 2000
                                    });
                                }
                            },
                            complete: function () {
                                isSubmit = true;
                            }
                        });
                    }
                });
            }
        };
        $('#delete,#add').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });

    });
</script>

