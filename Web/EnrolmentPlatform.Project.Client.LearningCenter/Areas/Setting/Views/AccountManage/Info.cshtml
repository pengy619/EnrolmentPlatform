    <div class="panel">
        <div class="panel-title">
            资质信息
        </div>
        <div class="panel-body">
            <div class="info-cell no-padding">
                <div class="row row-3" id="layer-photos">
                    <div class="item item-pic">
                        <div class="pic">
                            <div class="cover"></div>
                            <img src="@dto.BusinessLicenseUrl" alt="">
                        </div>
                        <p>营业执照</p>
                    </div>
                    <div class="item item-pic">
                        <div class="pic">
                            <div class="cover"></div>
                            <img src="@dto.IDCardUpwardsUrl" alt="">
                        </div>
                        <p>身份证正面</p>
                    </div>
                    <div class="item item-pic">
                        <div class="pic">
                            <div class="cover"></div>
                            <img src="@dto.IDCardReverseUrl" alt="">
                        </div>
                        <p>身份证反面</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    layui.use(['jquery', 'table', 'layer'], function () {
        var $ = layui.$;
        var layer = layui.layer;
        var pics = $('#layer-photos .item-pic')
        var data = []
        pics.each(function (index, item) {
            var src = $(item).find('img').attr('src')
            var text = $(item).find('p').text()
            var item = {
                alt: text,
                src: src,
                pid: 'pic' + index
            }
            data.push(item)
        })
        var photos = {
            title: "资质信息", //相册标题
            start: 0, //初始显示的图片序号，默认0
            data: data
        }
        pics.click(function () {
            photos.start = $(this).index()
            layer.photos({
                photos: photos,
                anim: 0 //0-6的选择，指定弹出图片动画类型，默认随机（请注意，3.0之前的版本用shift参数）
            });
        })

    })
</script> 