    {{#  } }}
    {{#  if(d.OrderStatus ==@((int)OrderStatusForSpecialtyEnum.UnSend)){ }}
    <a class="layui-btn layui-btn-warm layui-btn-xs" lay-event="SupplierSendGood">发货</a>
    {{#  } }}
    {{# if (d.CancelForSystem == @((int)CancelForSystemEnum.Consumer) && d.OrderStatus == @((int)OrderStatusForSpecialtyEnum.Refunding)) { }}
    <a class="layui-btn layui-btn-warm layui-btn-xs" lay-event="SupplierHandleRefund">处理退款</a>
    {{#  } }}
    {{# if (d.SalesModel == @((int)ProductSaleModelEnum.Presale)&&(d.OrderStatus == @((int)OrderStatusForSpecialtyEnum.UnSend)|| d.OrderStatus == @((int)OrderStatusForSpecialtyEnum.UnReceived)|| d.OrderStatus == @((int)OrderStatusForSpecialtyEnum.PayDeposit)|| d.OrderStatus == @((int)OrderStatusForSpecialtyEnum.UnRetainage))) { }}
    <a class="layui-btn layui-btn-warm layui-btn-xs" lay-event="SupplierRefund">发起退款</a>
