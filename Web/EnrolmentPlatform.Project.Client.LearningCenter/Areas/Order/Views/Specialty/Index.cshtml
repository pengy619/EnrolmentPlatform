    {{#
    return d.CreatorTime.substring(0,10);
    }}
</script>
<script type="text/html" id="ActualAmountTpl">
    {{#
    return '¥'+d.ActualAmount.toFixed(2);
    }}
</script>
<script>
    var _IsSubmit = false;
    layui.use(['jquery', 'table', 'layer', "form"], function () {
        var form = layui.form;
        var table = layui.table;
        //实例表格
        var tableOptions = {
            elem: '#order-table'
            , skin: 'line'
            , limit: 20
            , url: '@Url.Action("Search", "Specialty")'//数据
            , method: 'post'
            , page: true //开启分页
            , cols: [[ //表头
                { field: 'OrderNo', title: '订单编号', sort: true, minWidth: 210 }
                , { field: 'SalesModelCH', title: '销售模式', width: 100 }
                , { field: 'OrderName', title: '产品信息', }
                , { field: 'TotalQuantity', title: '购买数量', sort: true, width: 100 }
                , { field: 'ActualAmount', title: '订单总金额', sort: true, templet: '#ActualAmountTpl', width: 150 }
                , { field: 'OrderStatusCH', title: '订单状态', width: 100 }
                , { field: 'CreatorAccount', title: '下单账户', sort: true }
                , { field: 'Consignee', title: '收货人', width: 100 }
                , { field: 'CreatorTime', title: '下单日期', sort: true, minWidth: 180, templet: '#timeTpl' }
                , { field: 'OrderSourceCH', title: '订单来源', width: 100 }
                , { title: '操作', toolbar: '#tableTool', minWidth: 150 }
            ]],
            where: { OrderStatus: $("input[name='OrderStatus']:checked").val(), SalesModel: $("select[name='SalesModel']").val(), OrderNo: $("input[name='OrderNo']").val(), OrderSource: $("#OrderSource").val()}
        }
        table.render(tableOptions)
        //var $ = layui.$,
        active = {
            reload: function () {
                //执行重载
                table.reload('order-table', {

                    page: {
                        curr: 1 //重新从第 1 页开始
                    },
                    where: { OrderStatus: $("input[name='OrderStatus']:checked").val(), SalesModel: $("select[name='SalesModel']").val(), OrderNo: $("input[name='OrderNo']").val(), OrderSource: $("#OrderSource").val() }
                });
            }
        };
        $('.panel .layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });
        //点击事件
        form.on("radio(Search)", function (data) {//lay-filter="Search"
            $("#btnSearch").click();
        });
        form.on('radio(modal3_IsAgree)', function (data) {
            if (data.value == "false") {
                $("#modal3_RefundAmount").val('');
                $("#div_RefundAmount").css("display", "none");
            }
            else {
                $("#div_RefundAmount").css("display", "block");

            }
        });
        table.on('tool(table)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            var tr = obj.tr; //获得当前行 tr 的DOM对象
            if (layEvent == 'detail') {
                location.href = "@Url.Action("Detail", "Specialty", new { area = "Order" })" + "/" + data["OrderId"];
            }
            else if (layEvent == 'updatePrice') {
                $("#sp_price").html(data["ActualAmount"]);
                layer.open({
                    type: 1,
                    title: '修改价格',
                    btn: ['确定', '取消'],
                    //skin: 'layui-layer-rim', //加上边框
                    area: ['500px'], //宽高
                    content: $('#button1-modal'),
                    yes: function () {
                        var orderId = data["OrderId"];
                        var updateTotalAmount = $("#txt_OrderPrice").val();
                        var regex = /^\d{1,16}(\.\d{1,2})?$/;
                        if (!regex.test(updateTotalAmount)) {
                            layer.msg('金额格式不正确', {
                                icon: 2
                                , time: 2000
                            });
                            return false;
                        }
                        if (!_IsSubmit) {
                            $.ajax({
                                url: "@Url.Action("SupplierUpdatePrice", "Specialty")",
                                type: "post",
                                data: { OrderId: orderId, UpdateTotalAmount: updateTotalAmount },
                                beforeSend: function () {
                                    _IsSubmit = true;
                                },
                                success: function (res) {
                                    bool = res.IsSuccess;
                                    if (res.IsSuccess) {
                                        layer.msg("修改成功", {
                                            icon: 1
                                            , time: 2000
                                        }, function () {
                                            layer.closeAll();
                                            $("#btnSearch").click();
                                        });
                                    }
                                    else {
                                        layer.msg(res.Info, {
                                            icon: 2
                                            , time: 2000
                                        });
                                    }
                                    _IsSubmit = false;
                                }
                            });
                            return bool;
                        }
                    },
                    btn2: function () {

                    }
                });
            }
            else if (layEvent == 'SupplierSendGood') {

                layer.open({
                    type: 1,
                    title: '发货',
                    btn: ['确定', '取消'],
                    //skin: 'layui-layer-rim', //加上边框
                    area: ['400px', '300px'], //宽高
                    content: $('#button2-modal'),
                    yes: function () {
                        return SupplierSendGood(data["OrderId"]);
                    },
                    btn2: function () {

                    }
                });
            }
            else if (layEvent == 'SupplierHandleRefund') {
                $("#sp_PaidAmount").html("￥" + data["PaidAmount"]);
                $("#modal3_RefundAmount").val(data["PaidAmount"]);
                layer.open({
                    type: 1,
                    title: '退款处理',
                    btn: ['确定', '取消'],
                    //skin: 'layui-layer-rim', //加上边框
                    area: ['500px'], //宽高
                    content: $('#button3-modal'),
                    yes: function () {
                        return SupplierHandleRefund(data["OrderId"]);
                    },
                    btn2: function () {

                    }
                });
            }
            else if (layEvent == 'SupplierRefund') {
                //SupplierRefund
                layer.open({
                    type: 1,
                    title: '退款',
                    btn: ['确定', '取消'],
                    //skin: 'layui-layer-rim', //加上边框
                    area: ['500px'], //宽高
                    content: $('#button4-modal'),
                    yes: function () {
                        return SupplierRefund(data["OrderId"]);
                    },
                    btn2: function () {

                    }
                });
            }
        })

        //发货
        function SupplierSendGood(orderid) {
            var bool = false;
            var orderId = orderid;
            var expressCompany = $("#txt_express").val();
            var waybillNumber = $("#txt_number").val();
            if (expressCompany=="") {
                layer.msg('请输入快递公司', {
                    icon: 2
                    , time: 2000
                });
                return false;
            }
            if (waybillNumber == "") {
                layer.msg('请输入运单号', {
                    icon: 2
                    , time: 2000
                });
                return false;
            }
            else if (!(/^\d+$/.test(waybillNumber))) {
                layer.msg('运单号只能为数字', {
                    icon: 2
                    , time: 2000
                });
                return false;
            }
            if (!_IsSubmit)
            {
                $.ajax({
                        url: "@Url.Action("SupplierSendGood", "Specialty")",
                        type: "post",
                        data: { OrderId: orderId, ExpressCompany: expressCompany, WaybillNumber: waybillNumber },
                        beforeSend: function () {
                            _IsSubmit = true;
                        },
                        success: function (res) {
                            bool = res.IsSuccess;
                            if (res.IsSuccess) {
                                layer.msg("发货成功", {
                                            icon: 1
                                            , time: 2000
                                }, function () {
                                    layer.closeAll();
                                    $("#btnSearch").click();
                                        });
                            }
                            else {
                                layer.msg(res.Info, {
                                    icon: 2
                                    , time: 2000
                                });
                            }
                            _IsSubmit = false;
                        }
                });
                return bool;
            }
        }
        function SupplierHandleRefund(orderid) {
            var bool = false;
            var orderId = orderid;
            var isAgree = $("input[name='modal3_IsAgree']:checked").val();
            var refundAmount = $("#modal3_RefundAmount").val();
            var remark = $("#modal3_Remark").val();
            var regex = /^\d{1,16}(\.\d{1,2})?$/;
            if (isAgree == "true") {
                if (!regex.test(refundAmount)) {
                    layer.msg('请输入退款金额', {
                        icon: 2
                        , time: 2000
                    });
                    return false;
                }
            }
            else {
                refundAmount = 0;
            }
            if (!_IsSubmit)
            {
                $.ajax({
                        url: "@Url.Action("SupplierHandleRefund", "Specialty")",
                        type: "post",
                        data: { OrderId: orderId, IsAgree: isAgree, RefundAmount: refundAmount , Remark: remark},
                        beforeSend: function () {
                            _IsSubmit = true;
                        },
                        success: function (res) {
                            bool = res.IsSuccess;
                            if (res.IsSuccess) {
                                layer.msg("操作成功", {
                                            icon: 1
                                            , time: 2000
                                }, function () {
                                    layer.closeAll();
                                    $("#btnSearch").click();
                                    });

                            }
                            else {
                                layer.msg(res.Info, {
                                    icon: 2
                                    , time: 2000
                                });
                            }
                            _IsSubmit = false;
                        }
                });
                return bool;
            }
        }
        //供应商退款
    function SupplierRefund(orderId) {
        var bool = false;
        var orderId = orderId;
        var refundReason = $("#select_CancelReason").val();
        var remark = $("#txt_remark").val();
        if (refundReason=="") {
            layer.msg('请选择退款原因', {
                icon: 2
                , time: 2000
            });
            return false;
        }

        if (!_IsSubmit)
        {
            $.ajax({
                    url: "@Url.Action("SupplierRefund", "Specialty")",
                    type: "post",
                    data: { OrderId: orderId, RefundReason: refundReason, Remark: remark},
                    beforeSend: function () {
                        _IsSubmit = true;
                    },
                    success: function (res) {
                        bool = res.IsSuccess;
                        if (res.IsSuccess) {
                            layer.msg("申请退款成功，等待平台审核", {
                                        icon: 1
                                        , time: 2000
                            }, function () {
                                layer.closeAll();
                                $("#btnSearch").click();
                                });

                        }
                        else {
                            layer.msg(res.Info, {
                                icon: 2
                                , time: 2000
                            });
                        }
                        _IsSubmit = false;
                    }
            });
            return bool;
        }
    }
    });

</script> 