<script>
    var _IsSubmit = false;
    layui.use(['jquery', 'table', 'laydate', "form"], function () {
        var form = layui.form;
        var table = layui.table;
        var laydate = layui.laydate;
        var $ = layui.$;
        //日期
        laydate.render({
            elem: '#StartDate'
        });
        laydate.render({
            elem: '#EndDate'
        });
        var tableOptions = {
            elem: '#order-table'
            , skin: 'line'
            , limit: 20
            , url: '@Url.Action("Search", "Ticket")'//数据
            , method: 'post'
            , page: true //开启分页
            , cols: [[ //表头
                { field: 'OrderNo', title: '订单编号', sort: true }
                , { field: 'OrderName', title: '产品名称', }
                , { field: 'PlayDay', title: '出行日期', templet: '#timeTpl1' }
                , { field: 'TotalQuantity', title: '购买份数', }
                , { field: 'ActualAmount', title: '订单总金额', templet: '#ActualAmountTpl' }
                , { field: 'OrderStatusCH', title: '订单状态', sort: true }
                , { field: 'TicketStatusCH', title: '出票状态', }
                , { field: 'CreatorTime', title: '下单日期', templet: '#timeTpl' }
                , { field: 'OrderSourceCH', title: '订单来源', }
                , { field: 'CreatorAccount', title: '下单账户', }
                , { title: '操作', toolbar: '#tableTool', minWidth: 300 }
            ]],
            where: { OrderStatus: $("input[name='OrderStatus']:checked").val(), TicketStatus: $("input[name='TicketStatus']:checked").val(), OrderNo: $("#OrderNo").val(), ProductName: $("#ProductName").val(), TicketCollector: $("#TicketCollector").val(), CreatorAccount: $("#CreatorAccount").val(), StartDate: $("#StartDate").val(), EndDate: $("#EndDate").val(), OrderSource: $("#OrderSource").val() }
        };
        table.render(tableOptions);
        active = {
            reload: function () {
                //执行重载
                table.reload('order-table', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    },
                    loading: true,
                    where: { OrderStatus: $("input[name='OrderStatus']:checked").val(), TicketStatus: $("input[name='TicketStatus']:checked").val(), OrderNo: $("#OrderNo").val(), ProductName: $("#ProductName").val(), TicketCollector: $("#TicketCollector").val(), CreatorAccount: $("#CreatorAccount").val(), StartDate: $("#StartDate").val(), EndDate: $("#EndDate").val(), OrderSource: $("#OrderSource").val() }
                });
            },
            ToExcel: function () {
                $("#form1").attr("action", "/Order/Ticket/ExportToExcel");
                $("#form1").submit();
            },
        };
        table.on('tool(table)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            var tr = obj.tr; //获得当前行 tr 的DOM对象
            if (layEvent == 'refund1') {
                $("#div_ActualAmount").html("¥" + data["ActualAmount"]);
                layer.open({
                    type: 1,
                    title: '处理退款',
                    btn: ['确定', '取消'],
                    area: ['600px', '400px'], //宽高
                    content: $('#refund-btn-modal1'),
                    yes: function () {
                        return SupplierHandleRefund(data["OrderId"]);
                    },
                    btn2: function () {

                    }
                });
            }
            if (layEvent == 'updatePrice') {
                var bool = false;
                $("#sp_price").html(data["TotalAmountCH"]);
                layer.open({
                    type: 1,
                    title: '修改价格',
                    btn: ['确定', '取消'],
                    area: ['500px'], //宽高
                    content: $('#change-btn-modal'),
                    yes: function () {
                        var orderId = data["OrderId"];
                        var updateTotalAmount = $("#txt_OrderPrice").val();
                        var regex = /^\d{1,16}(\.\d{1,2})?$/;
                        if (!regex.test(updateTotalAmount)) {
                            layer.msg('金额格式不正确', {
                                icon: 2
                                , time: 2000
                            });
                            return false;
                        }
                        if (!_IsSubmit) {
                            $.ajax({
                                url: "@Url.Action("SupplierUpdatePrice", "Ticket")",
                                type: "post",
                                data: { OrderId: orderId, UpdateTotalAmount: updateTotalAmount },
                                beforeSend: function () {
                                    _IsSubmit = true;
                                },
                                success: function (res) {
                                    bool = res.IsSuccess;
                                    if (res.IsSuccess) {
                                        layer.msg("修改成功", {
                                            icon: 1
                                            , time: 2000
                                        }, function () {
                                            layer.closeAll();
                                            $("#btnSearch").click();
                                        });
                                        bool = true;
                                    }
                                    else {
                                        layer.msg(res.Info, {
                                            icon: 2
                                            , time: 2000
                                        });
                                    }
                                    _IsSubmit = false;
                                }
                            });
                            return bool;
                        }
                    },
                    btn2: function () {

                    }
                });
            }
            if (layEvent == 'refund2') {
                $("#Model_ActualAmount").val("¥" + data["ActualAmount"]);
                layer.open({
                    type: 1,
                    title: '发起退款',
                    btn: ['提交申请', '取消'],
                    area: ['600px', '360px'], //宽高
                    content: $('#refund-btn-modal2'),
                    yes: function () {
                        return SupplierRefund(data["OrderId"]);
                    },
                    btn2: function () {

                    }
                });
            }
            else if (layEvent == 'detail') {
                location.href = "@Url.Action("Detail", "Ticket", new { area = "Order" })" + "/" + data["OrderId"];

            }
        });
        $('.panel .layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });
        //点击事件
        form.on("radio(Search)", function (data) {
            $("#btnSearch").click();
        });
        //供应商退款
        function SupplierRefund(id) {
            var bool = false;
            var orderId = id;
            var refundReason = $("#select_CancelReason").val();
            var remark = $("#txt_remark").val();
            if (refundReason=="") {
                layer.msg('请选择退款原因', {
                    icon: 2
                    , time: 2000
                });
                return false;
            }
            if (!_IsSubmit)
            {
                $.ajax({
                        url: "@Url.Action("SupplierRefund", "Ticket")",
                        type: "post",
                        async: false,
                        data: { OrderId: orderId, RefundReason: refundReason, Remark: remark},
                        beforeSend: function () {
                            _IsSubmit = true;
                        },
                        success: function (res) {
                            bool = res.IsSuccess;
                            if (res.IsSuccess) {
                                layer.msg("申请退款成功，等待平台审核", {
                                            icon: 1
                                            , time: 2000
                                }, function () {
                                    layer.closeAll();
                                    $("#btnSearch").click();
                                    });

                            }
                            else {
                                layer.msg(res.Info, {
                                    icon: 2
                                    , time: 2000
                                });
                            }
                            _IsSubmit = false;
                        }
                });
                return bool;
            }
        }
        function SupplierHandleRefund(id) {
            var bool = false;
            var orderId = id;
            var isAgree = $("input[name='Handle_modal_IsAgree']:checked").val();
            var refundAmount = $("#Handle_modal_RefundAmount").val();
            var remark = $("#Handle_modal_Remark").val();
            var regex = /^\d{1,16}(\.\d{1,2})?$/;
            if (isAgree == "true") {
                if (refundAmount=='') {
                    layer.msg('请输入退款金额', {
                        icon: 2
                        , time: 2000
                    });
                    return false;
                }
                if (!regex.test(refundAmount)) {
                    layer.msg('金额格式不正确', {
                        icon: 2
                        , time: 2000
                    });
                    return false;
                }
            }
            else {
                refundAmount = 0;
            }
            if (!_IsSubmit)
            {
                $.ajax({
                        url: "@Url.Action("SupplierHandleRefund", "Ticket")",
                        type: "post",
                        data: { OrderId: orderId, IsAgree: isAgree, RefundAmount: refundAmount , Remark: remark},
                        beforeSend: function () {
                            _IsSubmit = true;
                        },
                        success: function (res) {
                            bool = res.IsSuccess;
                            if (res.IsSuccess) {
                                layer.msg("操作成功", {
                                            icon: 1
                                            , time: 2000
                                }, function () {
                                    layer.closeAll();
                                    $("#btnSearch").click();
                                    });

                            }
                            else {
                                layer.msg(res.Info, {
                                    icon: 2
                                    , time: 2000
                                });
                            }
                            _IsSubmit = false;
                        }
                });
                return bool;
            }
        }
        form.on('radio(Handle_modal_IsAgree)', function (data) {
            if (data.value == "false") {
                $("#Handle_modal_RefundAmount").val('');
                $("#div_RefundAmount").css("display", "none");
            }
            else {
                $("#div_RefundAmount").css("display", "block");

            }
        });
    });

</script>
