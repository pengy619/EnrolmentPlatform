@using EnrolmentPlatform.Project.DTO.Product;
@{
    ViewBag.Title = "农产品管理";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categories = ViewBag.Categories as List<ProductCategoriesDto>;
    var productStatus = ViewBag.ProductStatus as List<KeyValuePair<int, string>>;
    var saleModels = ViewBag.SaleModels as List<KeyValuePair<int, string>>;
}
<div class="main-wrap">
    <div class="panel">
        <div class="panel-title">
            <div class="layui-form">
                <div class="layui-form-item ">
                    <label class="layui-form-label">状态</label>
                    <div class="layui-input-block">
                        <input type="radio" name="productStatus" lay-filter="status_search" value="" title="全部" checked>
                        @foreach (var item in productStatus)
                        {
                            <input type="radio" lay-filter="status_search" name="productStatus" value="@item.Key" title="@item.Value">
                        }
                    </div>
                </div>
                <div class="layui-form-item ">
                    <label class="layui-form-label">农产品分类</label>
                    <div class="layui-input-inline">
                        <select name="productCategory" lay-filter="sel_search">
                            <option value="">请选择</option>
                            @foreach (var item in categories)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <label class="layui-form-label">销售模式</label>
                    <div class="layui-input-inline">
                        <select name="saleModel" lay-filter="sel_search">
                            <option value="">请选择</option>
                            @foreach (var item in saleModels)
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        </select>
                    </div>
                    <label class="layui-form-label">农产品名称</label>
                    <div class="layui-input-inline">
                        <input type="text" name="productName" id="productName" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item ">
                    <label class="layui-form-label">品种</label>
                    <div class="layui-input-inline">
                        <input type="text" name="varietiesName" placeholder="品种" id="varietiesName" autocomplete="off" class="layui-input">
                    </div>
                    <label class="layui-form-label">产品编号</label>
                    <div class="layui-input-inline">
                        <input type="text" id="projectNumber" placeholder="产品编号" autocomplete="off" class="layui-input">
                    </div>
                    <button class="layui-btn layui-btn-warm" data-type="reload">查询</button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <a href="@Url.Action("Option","Specialty",new { area="Product", parentId=2 })" class="layui-btn layui-btn-warm layui-btn-sm">添加农产品</a>
            <button class="layui-btn layui-btn-default layui-btn-sm" data-type="onSale">申请上架</button>
            <button class="layui-btn layui-btn-default layui-btn-sm" data-type="offSale">下架</button>
            <button class="layui-btn layui-btn-default layui-btn-sm" data-type="delete">删除</button>
            <table id="product-table" lay-filter="table"></table>
        </div>
    </div>
</div>

<script type="text/html" id="tableTool">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="copy">复制</a>
    {{#  if(d.Status != 1 && d.SalesModel == 2 && !d.IsMarket){ }}
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="sale">上市</a>
    {{#  } }}
     
</script>

<script>
    var isSubmit = true;
    layui.use(['jquery', 'table', 'layer', 'form'], function () {
        var table = layui.table;
        var form = layui.form;
        //实例表格
        var tableOptions = {
            elem: '#product-table'
            , skin: 'line'
            , limit: 20
            , url: '@Url.Action("ProductList", "Specialty")'//数据
            , page: true //开启分页
            , cols: [[ //表头
                { type: 'checkbox', fixed: 'left' }
                //, { field: 'ProductNumber', title: '产品编号', sort: true, minWidth: 150 }
                , { field: 'CateName', title: '农产品分类', sort: true, minWidth: 120 }
                , { field: 'ProductName', title: '农产品名称', sort: true, minWidth: 120 }
                , { field: 'VarietiesName', title: '品种', minWidth: 150 }
                , { field: 'SpecsStr', title: '规格', minWidth: 80}
                , { field: 'SaleslUnit', title: '单位', Width: 80 }
                , { field: 'MinMarkPriceStr', title: '价格', sort: true, Width: 80 }
                , { field: 'Inventory', title: '库存数', Width: 80 }
                , { field: 'SoldQuantity', title: '已售', width: 80 }
                , { field: 'SaleQuantity', title: '可售', width: 80 }
                , { field: 'SalesModelStr', title: '模式', Width: 80}
                , { field: 'StatusStr', title: '销售状态', Width: 100 }
                , { title: '操作', toolbar: '#tableTool', minWidth: 200 }
            ]]
        }
        table.render(tableOptions)

        var $ = layui.$, active = {
            reload: function () {
                //执行重载
                table.reload('product-table', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    }
                    , where: {
                        Status: $("input[name=productStatus]:checked").val(),
                        ProductCategoriesId: $("select[name=productCategory]").val(),
                        SalesModel: $("select[name=saleModel]").val(),
                        ProductName: $('#productName').val(),
                        VarietiesName: $('#varietiesName').val(),
                        Number: $.trim($('#projectNumber').val())
                    }
                });
            },
            onSale: function () {
                var checkStatus = table.checkStatus('product-table')
                    , data = checkStatus.data;
                if (data.length == 0) return false;
                layer.confirm('您确定要上架选中的产品吗？', function (index) {
                    var productIds = [];
                    for (var i = 0; i < data.length; i++) {
                        productIds.push(data[i].ProductId);
                    }
                    if (isSubmit) {
                        isSubmit = false;
                        $.ajax({
                            url: "@Url.Action("ProductOnSale", "Specialty")",
                            type: 'Post',
                            async: false,
                            dataType: 'json',
                            data: { ProductIds: productIds },
                            success: function (result) {
                                isSubmit = true;
                                layer.close(index);
                                if (result.Status) {
                                    table.reload('product-table');
                                }
                                else {
                                    layer.msg(result.Message);
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                isSubmit = true;
                                layer.close(index);
                                layer.msg("系统出现异常，请联系管理员！");
                            }
                        });
                    }
                });
            },
            offSale: function () {
                var checkStatus = table.checkStatus('product-table')
                    , data = checkStatus.data;
                if (data.length == 0) return false;
                layer.confirm('您确定要下架选中的产品吗？', function (index) {
                    var productIds = [];
                    for (var i = 0; i < data.length; i++) {
                        productIds.push(data[i].ProductId);
                    } 
                    if (isSubmit) {
                        isSubmit = false;
                        $.ajax({
                            url: "@Url.Action("ProductOffSale", "Specialty")",
                            type: 'Post',
                            async: false,
                            dataType: 'json',
                            data: { ProductIds: productIds },
                            success: function (result) {
                                isSubmit = true;
                                if (result.Status) {
                                    table.reload('product-table');
                                }
                                else {
                                    layer.msg(result.Message);
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                isSubmit = true;
                                layer.msg("系统出现异常，请联系管理员！");
                            }
                        });
                        layer.close(index);
                    }
                });
            },
            delete: function () {
                var checkStatus = table.checkStatus('product-table')
                    , data = checkStatus.data;
                if (data.length == 0) return false;
                layer.confirm('您确定要删除选中的产品吗？', function (index) {
                    var productIds = [];
                    for (var i = 0; i < data.length; i++) {
                        productIds.push(data[i].ProductId);
                    }
                    if (isSubmit) {
                        isSubmit = false;
                        $.ajax({
                            url: "@Url.Action("DeleteProduct", "Specialty")",
                            type: 'Post',
                            async: false,
                            dataType: 'json',
                            data: { ProductIds: productIds },
                            success: function (result) {
                                isSubmit = true;
                                if (result.Status) {
                                    table.reload('product-table');
                                }
                                else {
                                    layer.msg(result.Message);
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                isSubmit = true;
                                layer.msg("系统出现异常，请联系管理员！");
                            }
                        });
                        layer.close(index);
                    }
                });
            }
        };

        $('.panel .layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });

        form.on('radio(status_search)', function (data) {
            //执行重载
            table.reload('product-table', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    Status: $("input[name=productStatus]:checked").val(),
                    ProductCategoriesId: $("select[name=productCategory]").val(),
                    SalesModel: $("select[name=saleModel]").val(),
                    ProductName: $('#productName').val(),
                    VarietiesName: $('#varietiesName').val(),
                    Number: $.trim($('#projectNumber').val())
                }
            });
        });
        form.on('select(sel_search)', function (data) {
            //执行重载
            table.reload('product-table', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    Status: $("input[name=productStatus]:checked").val(),
                    ProductCategoriesId: $("select[name=productCategory]").val(),
                    SalesModel: $("select[name=saleModel]").val(),
                    ProductName: $('#productName').val(),
                    VarietiesName: $('#varietiesName').val(),
                    Number: $.trim($('#projectNumber').val())
                }
            });
        });

        table.on('tool(table)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            var tr = obj.tr; //获得当前行 tr 的DOM对象
            if (layEvent == 'sale') {
                layer.confirm('确定产品上市将通知客户支付尾款，并安排发货。\n请谨慎操作。', {
                    title: '确定产品上市',
                    btn: ['确定上市', '取消'] //按钮
                }, function (index) {
                    //上市 
                    if (isSubmit) {
                        isSubmit = false;
                        $.ajax({
                            url: "@Url.Action("ProductToMarket", "Specialty")",
                            type: 'Post',
                            async: false,
                            dataType: 'json',
                            data: { ProductId: data.ProductId },
                            success: function (result) {
                                isSubmit = true;
                                if (result.Status) {
                                    table.reload('product-table');
                                }
                                else {
                                    layer.msg(result.Message);
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                isSubmit = true;
                                layer.msg("系统出现异常，请联系管理员！");
                            }
                        });
                        layer.close(index);
                    }
                }, function () {
                    //取消
                });
            } else if (layEvent === 'edit') {
                location.href = "@Url.Action("Option", "Specialty")?productId=" + data.ProductId;
            } else if (layEvent === 'detail') {
                location.href = "@Url.Action("Detail", "Specialty")?productId=" + data.ProductId;
            } else if (layEvent === "copy") {
                layer.confirm('您确定要复制该农产品吗？', function (index) {
                    if (isSubmit) {
                        isSubmit = false;
                        $.ajax({
                            url: "@Url.Action("CopyProduct", "Specialty")",
                            type: 'Post',
                            async: false,
                            dataType: 'json',
                            data: { ProductId: data.ProductId },
                            success: function (result) {
                                isSubmit = true;
                                if (result.Status) {
                                    table.reload('product-table');
                                }
                                else {
                                    layer.msg(result.Message);
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                isSubmit = true;
                                layer.msg("系统出现异常，请联系管理员！");
                            }
                        });
                        layer.close(index);
                    }
                });
            }
        })

    })
</script> 