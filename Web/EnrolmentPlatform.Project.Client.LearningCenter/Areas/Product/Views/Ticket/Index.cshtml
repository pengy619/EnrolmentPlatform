
@{
    ViewBag.Title = "票务管理";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var TypeForTicket = ViewBag.TypeForTicket as List<KeyValuePair<int, string>>;
    var ProductStatus = ViewBag.ProductStatus as List<KeyValuePair<int, string>>;
    var ProductCate = ViewBag.ProductCate as List<ProductCategoriesDto>;
    var TikcetParamTheme = ViewBag.TikcetParamTheme as List<ProductCategoriesDto>;
}


<div class="main-wrap">
    <div class="panel">
        <div class="panel-title">
            <div class="layui-form">
                <div class="layui-form-item ">
                    <label class="layui-form-label">类别</label>
                    <div class="layui-input-block">
                        <input type="radio" lay-filter="status_search" name="typeForTicket" value="0" title="全部" checked>
                        @if (TypeForTicket != null && TypeForTicket.Any())
                        {
                            foreach (var item in TypeForTicket)
                            {
                                <input type="radio" lay-filter="status_search" name="typeForTicket" value="@(item.Key)" title="@(item.Value)">
                            }
                        }
                    </div>
                </div>
                <div class="layui-form-item ">
                    <label class="layui-form-label">状态</label>
                    <div class="layui-input-block">
                        <input type="radio" lay-filter="status_search" name="productStatus" value="0" title="全部" checked>
                        @if (ProductStatus != null && ProductStatus.Any())
                        {
                            foreach (var item in ProductStatus)
                            {
                                <input type="radio" lay-filter="status_search" name="productStatus" value="@(item.Key)" title="@(item.Value)">
                            }
                        }
                    </div>
                </div>
                <div class="layui-form-item ">
                    <label class="layui-form-label">票种</label>
                    <div class="layui-input-inline">
                        <select name="productCate" lay-filter="sel_search">
                            <option value="@(Guid.Empty)">全部</option>
                            @if (ProductCate != null && ProductCate.Any())
                            {
                                foreach (var item in ProductCate)
                                {
                                    <option value="@(item.Id)">@(item.Name)</option>
                                }
                            }
                        </select>
                    </div>
                    <label class="layui-form-label">主题</label>
                    <div class="layui-input-inline">
                        <select name="tikcetParamTheme" lay-filter="sel_search">
                            <option value="@(Guid.Empty)">全部</option>
                            @if (TikcetParamTheme != null && TikcetParamTheme.Any())
                            {
                                foreach (var item in TikcetParamTheme)
                                {
                                    <option value="@(item.Id)">@(item.Name)</option>
                                }
                            }
                        </select>
                    </div>
                    <label class="layui-form-label">产品名称</label>
                    <div class="layui-input-inline">
                        <input type="text" id="productName" placeholder="产品名称" autocomplete="off" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item ">
                    <label class="layui-form-label">产品编号</label>
                    <div class="layui-input-inline">
                        <input type="text" id="projectNumber" placeholder="产品编号" autocomplete="off" class="layui-input">
                    </div>
                    <button class="layui-btn layui-btn-warm" data-type="reload">查询</button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <a href="@Url.Action("OptionBasic", "Ticket", new { area = "Product" })" class="layui-btn layui-btn-warm layui-btn-sm">添加票</a>
            <button class="layui-btn layui-btn-default layui-btn-sm" data-type="onSale">上架</button>
            <button class="layui-btn layui-btn-default layui-btn-sm" data-type="offSale">下架</button>
            <button class="layui-btn layui-btn-default layui-btn-sm" data-type="delete">删除</button>
            <table id="tickets-table" lay-filter="table"></table>
        </div>
    </div>
</div>

<script type="text/html" id="tableTool">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-default layui-btn-xs" lay-event="copy">复制</a>
</script>
<script>
    var searchUrl = '@Url.Action("TicketList", "Ticket", new { area = "Product" })';
    var onSaleUrl = '@Url.Action("TicketOnSale", "Ticket", new { area = "Product" })';
    var offSaleUrl = '@Url.Action("TicketOffSale", "Ticket", new { area = "Product" })';
    var onDelUrl = '@Url.Action("DeleteTicket", "Ticket", new { area = "Product" })';
    var onCopyUrl = '@Url.Action("CopyTicket", "Ticket", new { area = "Product" })';
    var isSubmit = true;
    var enumOnsale = "@((int)ProductStatusEnum.OnSale)";

    layui.use(['jquery', 'table', 'layer', 'form'], function () {
        var table = layui.table;
        var form = layui.form;
        //实例表格
        var tableOptions = {
            elem: '#tickets-table'
            , skin: 'line'
            , limit: 20
            , url:searchUrl//数据
            , page: true //开启分页
            , cols: [[ //表头
                { type: 'checkbox', fixed: 'left' }
                , { field: 'ProductNumber', title: '产品编号', sort: true }
                , { field: 'TicketClassifyStr', title: '类别' }
                , { field: 'ProductName', title: '产品名称', width: 300 }
                , { field: 'ThemeName', title: '主题' }
                , { field: 'CateName', title: '票种', }
                , { field: 'StatusStr', title: '状态', sort: true }
                , { title: '操作', toolbar: '#tableTool', minWidth: 150 }
            ]]
        }

        table.render(tableOptions);

        var $ = layui.$, active = {
            reload: function () {
                //执行重载
                table.reload('tickets-table', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    }
                    , where: {
                        Type: $("input[name=typeForTicket]:checked").val(),
                        Status: $("input[name=productStatus]:checked").val(),
                        ProductCateId: $("select[name=productCate]").val(),
                        ThemeId: $("select[name=tikcetParamTheme]").val(),
                        ProductName: $.trim($('#productName').val()),
                        Number: $.trim($('#projectNumber').val())
                    }
                });
            },
            onSale: function () {
                var checkStatus = table.checkStatus('tickets-table')
                    , data = checkStatus.data;
                if (data.length == 0) return false;

                var productIds = [];
                var isOption = true;
                for (var i = 0; i < data.length; i++) {
                    if (data[i].Status == enumOnsale) {
                        isOption = false;
                        layer.msg("请勾选未上架的产品进行上架！");
                        break;
                    } else {
                        productIds.push(data[i].ProductId);
                    }
                }
                if (isOption) {
                    layer.confirm('您确定要上架选中的门票产品吗？', function (index) {
                        if (isSubmit) {
                            isSubmit = false;
                            $.ajax({
                                url: onSaleUrl,
                                type: 'Post',
                                async: false,
                                dataType: 'json',
                                data: { ticketIds: productIds },
                                success: function (result) {
                                    isSubmit = true;
                                    if (result.IsSuccess) {
                                        layer.msg(result.Info, function () {
                                            table.reload('tickets-table');
                                        });
                                    }
                                    else {
                                        layer.msg(result.Info);
                                    }
                                },
                                error: function (XMLHttpRequest, textStatus, errorThrown) {
                                    isSubmit = true;
                                    layer.msg("系统出现异常，请联系管理员！");
                                }
                            });
                        }
                        layer.close(index);
                    });
                }
            },
            offSale: function () {
                var checkStatus = table.checkStatus('tickets-table')
                    , data = checkStatus.data;
                if (data.length == 0) return false;

                var productIds = [];
                var isOption = true;
                for (var i = 0; i < data.length; i++) {
                    if (data[i].Status != enumOnsale) {
                        isOption = false;
                        layer.msg("请勾选已上架的产品进行下架！");
                        break;
                    } else {
                        productIds.push(data[i].ProductId);
                    }
                }
                if (isOption) {
                    layer.confirm('您确定要下架选中的门票产品吗？', function (index) {
                        if (isSubmit) {
                            isSubmit = false;
                            $.ajax({
                                url: offSaleUrl,
                                type: 'Post',
                                async: false,
                                dataType: 'json',
                                data: { ticketIds: productIds },
                                success: function (result) {
                                    isSubmit = true;
                                    if (result.IsSuccess) {
                                        layer.msg(result.Info);
                                        table.reload('tickets-table');
                                    }
                                    else {
                                        layer.msg(result.Info);
                                    }
                                },
                                error: function (XMLHttpRequest, textStatus, errorThrown) {
                                    isSubmit = true;
                                    layer.msg("系统出现异常，请联系管理员！");
                                }
                            });
                        }
                        layer.close(index);
                    });
                }
            },
            delete: function () {
                var checkStatus = table.checkStatus('tickets-table')
                    , data = checkStatus.data;
                if (data.length == 0) return false;
                layer.confirm('您确定要删除选中的门票产品吗？', function (index) {
                    var productIds = [];
                    for (var i = 0; i < data.length; i++) {
                        productIds.push(data[i].ProductId);
                    }
                    if (isSubmit) {
                        isSubmit = false;
                        $.ajax({
                            url: onDelUrl,
                            type: 'Post',
                            async: false,
                            dataType: 'json',
                            data: { ticketIds: productIds },
                            success: function (result) {
                                isSubmit = true;
                                if (result.IsSuccess) {
                                    layer.msg(result.Info);
                                    table.reload('tickets-table');
                                }
                                else {
                                    layer.msg(result.Info);
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                isSubmit = true;
                                layer.msg("系统出现异常，请联系管理员！");
                            }
                        });
                    }
                    layer.close(index);
                });
            }
        };

        $('.panel .layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });

        form.on('radio(status_search)', function (data) {
            //执行重载
            table.reload('tickets-table', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    Type: $("input[name=typeForTicket]:checked").val(),
                    Status: $("input[name=productStatus]:checked").val(),
                    ProductCateId: $("select[name=productCate]").val(),
                    ThemeId: $("select[name=tikcetParamTheme]").val(),
                    ProductName: $.trim($('#productName').val()),
                    Number: $.trim($('#projectNumber').val())
                }
            });
        });
        form.on('select(sel_search)', function (data) {
            //执行重载
            table.reload('tickets-table', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    Type: $("input[name=typeForTicket]:checked").val(),
                    Status: $("input[name=productStatus]:checked").val(),
                    ProductCateId: $("select[name=productCate]").val(),
                    ThemeId: $("select[name=tikcetParamTheme]").val(),
                    ProductName: $.trim($('#productName').val()),
                    Number: $.trim($('#projectNumber').val())
                }
            });
        });

        table.on('tool(table)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            var tr = obj.tr; //获得当前行 tr 的DOM对象
            if (layEvent === 'detail') {
                location.href = "@Url.Action("Detail", "Ticket")?ticketId=" + data.ProductId;
            } else if (layEvent === 'edit') {
                location.href = "@Url.Action("Option", "Ticket")?ticketId=" + data.ProductId;
            } else if (layEvent === "copy") {
                layer.confirm('您确定要复制该门票产品吗？', function (index) {
                    if (isSubmit) {
                        isSubmit = false;
                        $.ajax({
                            url: "@Url.Action("CopyTicket", "Ticket")",
                            type: 'Post',
                            async: false,
                            dataType: 'json',
                            data: { TicketId: data.ProductId },
                            success: function (result) {
                                isSubmit = true;
                                if (result.IsSuccess) {
                                    layer.msg(result.Info);
                                    table.reload('tickets-table');
                                }
                                else {
                                    layer.msg(result.Info);
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                isSubmit = true;
                                layer.msg("系统出现异常，请联系管理员！");
                            }
                        });
                        layer.close(index);
                    }
                });
            }
        })

    })
</script> 