@{
    ViewBag.Title = "缴费登记列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-wrap">
    <div class="panel">
        <div class="panel-title">
            <div class="layui-form">
                <div class="layui-form-item flex">
                    <label class="layui-form-label">审核状态</label>
                    <div class="layui-input-inline">
                        <select id="Status" name="Status" style="width:100px;">
                            <option value="">全部</option>
                            @foreach (var item in EnrolmentPlatform.Project.Infrastructure.EnumHelper.EnumDescriptionHelper.GetAllItemValueList<PaymentStatusEnum, int>())
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        </select>
                    </div>
                    <label class="layui-form-label">缴费名称</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Name" class="layui-input">
                    </div>
                    <label class="layui-form-label">登记时间</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Date" readonly="readonly" class="layui-input">
                    </div>
                    <button class="layui-btn layui-btn-warm" type="button" lay-submit="" lay-filter="s">查询</button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table id="table" lay-filter="table"></table>
        </div>
    </div>
</div>
<script type="text/html" id="tableTool">
    <a class="layui-btn layui-btn-primary layui-btn-xs" target="_blank" href="@Url.Action("PaymentDetail","Manager")?paymentId={{d.Id}}" lay-event="log">查看</a>
    {{# if(d.Status==1){ }}
    <a class="layui-btn layui-btn-primary layui-btn-xs" style="color:green;" href="javascript:ApprovalPayment('{{d.Id}}',true);" lay-event="log">审核通过</a>
    <a class="layui-btn layui-btn-primary layui-btn-xs" style="color:red;" href="javascript:ApprovalPayment('{{d.Id}}',false);" lay-event="log">审核拒绝</a>
    {{# } }}
</script>
<script type="text/javascript">
    var table, layer, laydate, form;
    layui.use(['jquery', 'table', 'laydate', 'layer'], function () {
        table = layui.table;
        layer = layui.layer;
        laydate = layui.laydate;
        form = layui.form;

        //日期
        laydate.render({
            elem: '#Date'
            , range: true
        });

        //实例表格
        var tableOptions = {
            elem: '#table'
            , skin: 'line'
            , limit: 10
            , url: '@Url.Action("PaymentSearch", "Manager")'
            , page: true //开启分页
            , cols: [[ //表头
                { field: 'Name', title: '缴费名称'}
                , { field: 'TypeName', title: '类型'}
                , { field: 'TotalAmount', title: '缴纳金额'}
                , { field: 'StatusName', title: '状态'}
                , { field: 'CreatorTime', title: '登记时间'}
                , { field: 'UserName', title: '登记人'}
                , { title: '操作', toolbar: '#tableTool', width: 150 }
            ]]
        }
        table.render(tableOptions);

        //查询
        form.on('submit(s)', function (data) {
            //执行重载
            table.reload('table', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: getSearchData()
            });
        });
    });

    //获得查询条件
    function getSearchData() {
        var dateArr = $("#Date").val();
        var dateFrom = "";
        var dateTo = "";
        if ($.trim(dateArr) != "") {
            dateFrom = dateArr.split(' - ')[0];
            dateTo = dateArr.split(' - ')[1];
        }

        return {
            Status: $("#Status").val(),
            Name: $("#Name").val(),
            DateFrom: dateFrom,
            DateTo: dateTo,
        };
    }

    //审核付款单
    function ApprovalPayment(paymentId,approved) {
        var req = {};
        req.paymentId = paymentId;
        req.approved = approved;

        var confirmMsg = "";
        var sucessMsg = "";
        if (approved == true) {
            confirmMsg = "是否确认审核通过？";
            sucessMsg = "审核通过成功！";
        } else {
            confirmMsg = "是否确认审核拒绝？";
            sucessMsg = "审核拒绝成功！";
        }

        //审核确认
        layer.confirm(confirmMsg, {
            btn: ['确认', '取消']
        }, function (index, layero) {
            $.ajax({
                type: "POST",
                contentType: "application/json;utf-8",
                dataType: "json",
                async: false,
                data: JSON.stringify(req),
                url: '@Url.Action("Approval", "Manager")',
                success: function (result) {
                    if (result.ret == true) {
                        layer.msg(sucessMsg, {
                            icon: 1,
                            time: 2000
                        }, function () {
                            table.reload("table");
                        });
                    }
                    else {
                        layer.msg(result.msg, {
                            icon: 2,
                            time: 2000
                        });
                    }
                }
            });

            layer.close(index);
        });
    }
</script>